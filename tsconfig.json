{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src/**/*", "env.ts", "app.ts", "database"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
